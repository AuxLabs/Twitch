{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": ["**.csproj"]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "guides/**.md",
          "guides/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "_templates/material"
    ],
    "globalMetadata": {
      "_appTitle": "AuxLabs.SimpleTwitch Documentation",
      "_appFooter": "AuxLabs.SimpleTwitch",
      "_enableSearch": true
    }
  }
}