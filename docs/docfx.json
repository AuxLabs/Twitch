{
  "metadata": [
    {
      "src": [
        {
          "files":[ "**.csproj" ],
          "exclude": [
            "**/tests/**"
          ],
          "src": "../"
        }
      ],
      "dest": "api",
      "filter": "filter.yml",
      "includePrivateMembers": false,
      "namespaceLayout": "nested",
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**", "codesnippet/**" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
      "_appTitle": "AuxLabs.Twitch Documentation",
      "_appFooter": "AuxLabs.Twitch",
      "_enableSearch": true
    }
  }
}